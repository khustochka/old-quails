<% content_for :page_title do %>
  <%= action_name.humanize %> <%= @rank_name %>
<% end %>


<h1><%= action_name.humanize %> <%= @rank_name %></h1>

<% form_for(@taxon) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.labelled_text_field :name_la  %>
  </p>
  <p>
    <%= f.labelled_text_field :name_en %>
  </p>
  <p>
    <%= f.labelled_text_field :name_ru %>
  </p>
  <p>
    <%= f.labelled_text_field :name_uk %>
  </p>
  <p>
    <%= f.labelled_text_field :synonims %>
  </p>
  <p>
    <%= f.labelled_text_area :description %>
  </p>
  <p>
    <%= f.labelled_set_sorting_combo "Insert after", @taxa, @taxon, "{:name_la} / {:name_ru}" %>
  </p>
  <p>
    <%= f.submit params[:id] ? 'Update' : 'Create' %>
  </p>
<% end %>

<%= link_to "#{@rank_name.pluralize.humanize} index", :action => "index" %>
<%= " | " + link_to("Add new #{@rank_name}", :action => "new") if controller.action_name != 'new' %>